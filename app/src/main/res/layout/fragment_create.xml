<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/title_description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="@string/title_description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/time_description_view"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_description_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/time_description"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="65dp"
        android:layout_toEndOf="@+id/time_description_view"
        android:text="m"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/time_description_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnCaptureImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="223dp"
        android:backgroundTint="@color/green_500"
        android:text="CAPTURE IMAGE" />

    <EditText
        android:id="@+id/albums_description_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/btnCaptureImage"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="-220dp"
        android:layout_marginBottom="109dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/albums_description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/album_description_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/albums_description_view"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="-110dp"
        android:layout_marginBottom="52dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/album_description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/simpleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_description_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="47dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:backgroundTint="@color/green_200"
        android:text="POST"
        app:iconPadding="0dp" />

</RelativeLayout>